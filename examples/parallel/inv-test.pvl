//:: cases InvariantBlockTest
//:: tools silicon
//:: verdict Pass Main.good
//:: verdict Fail Main.problem1 Main.problem2

class Main {
  int x,y,z;

  context Perm(x,write)**Perm(y,write)**Perm(z,write);
  ensures x + y == z;
  void good(){
    x=0;
    y=1;
    z=1;
    int t;
    context_everywhere inv(Perm(x,1/2)**Perm(y,1/2)**Perm(z,1/2)** x+y==z){
      t=x+z;
      atomic(inv){
        int tmp=x;
        x=y;
        y=tmp;
      }
    }
  }
  
  context Perm(x,write)**Perm(y,write)**Perm(z,write);
  ensures x + y == z;
  void problem1(){
    x=0;
    y=1;
    z=2;
    int t;
    context_everywhere inv(Perm(x,1/2)**Perm(y,1/2)**Perm(z,1/2)** x+y==z){
      t=x+z;
      atomic(inv){
        int tmp=x;
        x=y;
        y=tmp;
      }
    }
  }
  
  context Perm(x,write)**Perm(y,write)**Perm(z,write);
  ensures x + y == z;
  void problem2(){
    x=0;
    y=1;
    z=1;
    int t;
    context_everywhere inv(Perm(x,1/2)**Perm(y,1/2)**Perm(z,1/2)** x+y==z){
      t=x+z;
      atomic(inv){
        int tmp=x;
        x=y;
        y=tmp+1;
      }
    }
  }
}
